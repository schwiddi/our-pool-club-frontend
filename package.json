{
  "author": "schwiddi",
  "name": "our-pool-club-frontend",
  "version": "0.0.1",
  "description": "frontend to store games that had been played on your pool table",
  "private": true,
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^2.1.8",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "cypress": "^3.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "cypressopen": "cypress open",
    "cypressrun": "cypress run --record --key 77abec83-ee87-44fc-b1be-387360f65b28",
    "eslint": "./node_modules/.bin/eslint ./",
    "testall": "npm run eslint &&  npm run cypressrun"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-push": "npm run testall",
      "pre-commit": "npm run eslint",
      "...": "..."
    }
  }
}
